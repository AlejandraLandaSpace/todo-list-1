 <h1>Your todo list</h1>
 <h1>@the_todo.inspect %></h1>

     <h2>
      Add a new todo
    </h2>

    <form action="/insert_todo" method="post">
      <div>
        <label for="content_box">
          Describe the task:
        </label>

        <input type="text" id="content_box" name="query_content" value="k">
      </div>

      <button>
        Add to Next Up
      </button>
    </form>
<form action="/">
    <div class="next_up" style="color:darkorange">
  <h2>Next Up</h2>
  <ul>
  <%@the_todo.each do |todo|%>
  <li>@the_todo.content</li><a href="/delete_todo">Delete</a>
  <%= time_ago_in_words(@the_todo.created_at) %> ago
  <button>Move to In Progress</button>
  <%end%>
  </ul>
</div>
</form>

<form action="">
<div class="in_progress" style="color:darkgreen">
  <h2>In progress</h2>
  <ul>
  <%@the_todo.each do |todo|%>
  <li>@the_todo.content</li><a href="/delete_todo">Delete</a>
  <%= time_ago_in_words(@the_todo.created_at) %> ago
  <button>Move to Done</button>
  <%end%>
  </ul>
</div>
</form>

<form action="">
<div class="done" style="color:gray">
  <h2>Done</h2>
  <ul>
  <%@the_todo.each do |todo|%>
  <li>@the_todo.content</li><a href="/delete_todo">Delete</a>
 <%= time_ago_in_words(@the_todo.updated_at) %> ago
  <%end%>
  </ul>
</div>
</form>
